{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["src/*"],
    },
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
  },
}
